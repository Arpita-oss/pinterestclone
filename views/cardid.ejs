<% include ./partials/header.ejs %>
<div class="w-full  px-10 py-3 flex justify-between bg-zinc-800 text-zinc-300 items-center">
    <h3>Pinterest</h3>
    <div class="flex gap-10 items-center text-zinc-300">
      <a href="/profile">Profile</a><a href="/feed">Feed</a><a class="bg-red-600 px-3 py-2 text-white rounded-lg" href="/logout">Logout</a>
  
    </div>
     </div>
<div class="w-full min-h-screen bg-zinc-800 flex flex-wrap px-10 py-8 text-white">
    <div class="w-2/3 h-[38rem] rounded-lg overflow-hidden bg-red-700">
        <img class="w-full h-full object-cover" src="/images/uploads/<%= posts.Postimage %>" alt="">
    </div>
    <div class="dets w-1/3 h-[12rem] flex flex-col align-end justify-evenly">
        <h1 class="font-semibold text-3xl ml-5"><%= posts.title %></h1>
        <h1 class="font-medium text-2xl mb-2 ml-5 opacity-70"><%= posts.description %></h1>
        <div class="flex items-center">
            <div class="w-12 h-12 rounded-full ml-5 bg-zinc-200 mr-3 overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= posts.user.profileImage %>" alt="">
            </div>
            <div>
                <h1 class="font-medium text-2xl"><%= posts.user.name %></h1>
                <h1 class="font-medium text-1xl opacity-70">@<%= posts.user.username %></h1>
            </div>
        </div>
    </div>
</div>
<% include ./partials/footer.ejs %>