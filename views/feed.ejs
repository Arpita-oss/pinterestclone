<% include ./partials/header.ejs %>
<div class="w-full  px-10 py-3 flex justify-between bg-zinc-800 text-white items-center">
  <h3>Pinterest</h3>
  <div class="flex gap-10 items-center text-white">
    <a href="/profile">Profile</a><a href="/feed">Feed</a><a class="bg-red-700 px-3 py-2 text-white rounded-lg" href="/logout">Logout</a>
  </div>
   </div>
   <div class="w-full min-h-screen bg-zinc-800 px-10 py-10 flex flex-wrap ">
    <div class="cards flex flex-wrap gap-5">
        <% posts.forEach(function(elem){ %>
            <div>
                <div class="card w-52 h-40 overflow-hidden">
                    <img class="w-full h-full rounded-lg object-cover" src="/images/uploads/<%=elem.Postimage %>" alt="">
                </div>
                <h3 class="text-white"><%= elem.title %></h3>
                <h6 class=" text-xs text-zinc-300">@<%= elem.user.username %></h6>
            </div>
           
       <% }) %>
      

    </div>
   </div>

   <% include ./partials/footer.ejs %>